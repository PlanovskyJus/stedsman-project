<% if logged_in? %>
<div>
  <%= form_for(Comment.new) do |f| %>
    <div>
      <%= f.text_area :content %>
      <%= f.hidden_field :post_id, :value => @post.id %>
      <%= f.hidden_field :user_id, :value => current_user.id %>
      <%= f.hidden_field :author, :value => current_user.name %>
    </div>
    <div>
      <%= f.submit "Comment" %>
    </div>
  <% end %>
</div>
<% end %>
